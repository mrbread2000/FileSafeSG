<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:columnCount="2"
        android:rowCount="6">

        <Button
            android:id="@+id/videos"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/menu_vid_icon"
            android:onClick="videoFolder" />

        <Button
            android:id="@+id/documents"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@mipmap/menu_doc_icon"
            android:onClick="docFolder" />

        <Button
            android:id="@+id/audios"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/menu_aud_icon"
            android:onClick="iconFolder" />

        <Button
            android:id="@+id/photos"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@mipmap/menu_pic_icon"
            android:onClick="photoFolder"
            android:elevation="0dp" />

        <Button
            android:id="@+id/photos2"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/menu_pic_icon"
            android:onClick="photoFolder" />

        <Button
            android:id="@+id/photos1"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@mipmap/menu_pic_icon"
            android:onClick="photoFolder" />

    </GridLayout>

</RelativeLayout>