<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#dedede"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fssg.filesafesg.MainActivity">




    <Button
        android:text="Encrypted Files"
        android:id="@+id/encryptedfiles"
        android:layout_height="70dp"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/videos"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light" />


    <Button
        android:id="@+id/documents"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@mipmap/doc_icon"
        android:layout_above="@+id/audio"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/audio"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@mipmap/aud_icon"
        android:layout_above="@+id/photos"
        android:layout_alignLeft="@+id/documents"
        android:layout_alignStart="@+id/documents" />

    <Button
        android:id="@+id/photos"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@mipmap/pic_icon"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/audio"
        android:layout_alignStart="@+id/audio" />

    <Button
        android:id="@+id/videos"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@mipmap/vid_icon"
        android:layout_below="@+id/photos"
        android:layout_alignLeft="@+id/photos"
        android:layout_alignStart="@+id/photos" />

</RelativeLayout>
