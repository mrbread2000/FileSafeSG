<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"

    tools:context="fssg.filesafesg.MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <Button
        android:id="@+id/photos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/app_bar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"

        android:background="@mipmap/pic_icon"

        />



    <Button
        android:id="@+id/videos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/app_bar"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/vid_icon"

        />


    <Button
        android:id="@+id/documents"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/videos"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/doc_icon"

        />

    <Button
        android:id="@+id/audios"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/photos"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/aud_icon" />

    <Button
        android:id="@+id/encryptedfiles"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_below="@+id/audios"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="21dp"
        android:background="@mipmap/enc_icon"

        />


    <TextView
        android:text="@string/title_activity_photo_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photos"
        android:layout_toLeftOf="@+id/encryptedfiles"
        android:layout_toStartOf="@+id/encryptedfiles"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <TextView
        android:text="@string/title_activity_video_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videos"
        android:layout_toRightOf="@+id/encryptedfiles"
        android:layout_toEndOf="@+id/encryptedfiles"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView2" />


    <TextView
        android:text="@string/title_activity_audio_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audios"
        android:layout_toLeftOf="@+id/encryptedfiles"
        android:layout_toStartOf="@+id/encryptedfiles"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView3" />


    <TextView
        android:text="@string/title_activity_encrypt_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/encryptedfiles"
        android:layout_centerInParent="true"
        android:id="@+id/textView5" />

    <TextView
        android:text="@string/title_activity_doc_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_below="@+id/documents"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />


</RelativeLayout>
