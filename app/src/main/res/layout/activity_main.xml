<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor"
    android:orientation="horizontal">


    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="170dip"
        android:layout_height="200dip"
        android:orientation="vertical"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentRight="true"

  >

        <Button
            android:id="@+id/videos"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:background="@mipmap/vid_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/title_activity_video_folder"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="170dip"
        android:layout_height="200dip"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout1"
        android:gravity="start"
        >

        <Button
            android:id="@+id/audios"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:background="@mipmap/aud_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/title_activity_audio_folder"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="170dip"
        android:layout_height="200dip"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout2"
        android:gravity="start">

        <Button
            android:id="@+id/documents"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:background="@mipmap/doc_icon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/title_activity_doc_folder"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/layout3"
        android:layout_alignRight="@+id/layout4"
        android:orientation="vertical"
        android:layout_below="@+id/layout3"
        android:gravity="center">

        <Button
            android:id="@+id/encryptedfiles"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:background="@mipmap/enc_icon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/title_activity_encrypt_folder"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="170dip"
        android:layout_height="200dip"
        android:orientation="vertical"
        android:layout_below="@+id/app_bar"
       >

        <Button
            android:id="@+id/photos"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:background="@mipmap/pic_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/title_activity_photo_folder"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

