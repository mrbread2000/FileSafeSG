    <Button
        android:layout_width="185dp"
        android:layout_height="310dp"
        android:text="@string/title_activity_encrypted_folder"
        android:id="@+id/encryptedFile"
        android:layout_gravity="start|left|bottom"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:onClick="encryptedFolder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="185dp"
        android:layout_height="310dp"
        android:text="@string/Video"
        android:id="@+id/addVideoButton"
        android:layout_gravity="end|right|top"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:onClick="videoFolder"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="185dp"
        android:layout_height="310dp"
        android:text="@string/Photo"
        android:id="@+id/addPhotoButton"
        android:layout_gravity="start|left|top"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:onClick="photoFolder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="185dp"
        android:layout_height="310dp"
        android:text= "@string/Document"
        android:id="@+id/addDocButton"
        android:layout_gravity="end|right|bottom"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:onClick="docFolder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
